extends layout

block content
  .container
    .row
      .page-header
        h1=title
        small 有趣的图书小站
    .col-md-5
      .thumbnail
        a(href='/book/#{book._id}')
          img(src='#{book.cover}', alt="#{book.title}")
    .col-md-7
      dl.dl-horizontal
        dt 书名
        dd= book.title
        dt 作者
        dd= book.author
        dt 国家
        dd= book.country
        dt 时间
        dd= book.year
        dt 简介
        dd= book.summary