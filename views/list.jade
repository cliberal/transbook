extends layout

block content
  .container
    .row
      .page-header
        h1=title
        small 有趣的图书小站
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 书名
            th 作者
            th 国家
            th 年份
            th 录入时间
            th 查看
            th 更新
            th 删除
          tbody
            each item in books
              tr(class="item-id-#{item._id}")
                td #{item.title}
                td #{item.author}
                td #{item.country}
                td #{item.year}
                td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                td: a(target="_blank", href="../book/#{item._id}") 查看
                td: a(target="_blank", href="../admin/update/#{item._id}") 修改
                td
                  button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
  script(src='/js/main.js')